unit Controller_Configuracao;
////Unit de controle das configurações do sistema.

interface
uses DateUtils, IniFiles, StrUtils, SysUtils, Dialogs;

//funções


//procedimentos
procedure Controller_GravarConfiguracao(id:integer;Configuracao:string;campo:integer);


implementation

uses Model_Configuracao;

procedure Controller_GravarConfiguracao(id:integer;Configuracao:string;campo:integer);
begin
    case (campo) of
     1:begin
        if (Configuracao.IsEmpty) then
            begin
              ShowMessage('Obrigatório informar local para gravação das fotos!.');
              abort;
            end
        else
           Model_GravarConfiguracao(StrToInt(EdtIDLocalFoto.text),)
       end;
    end;




end;

end.
